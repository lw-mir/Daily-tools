/* help.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  position: relative;
  margin-bottom: 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.clear-icon {
  position: absolute;
  right: 70rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background-color: #ccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
}

/* 帮助内容样式 */
.help-content {
  margin-bottom: 30rpx;
}

.help-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 25rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.section-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f8ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 帮助项样式 */
.help-items {
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
}

.help-item {
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.help-item:last-child {
  border-bottom: none;
}

.help-item:active {
  background-color: #f8f9fa;
}

.question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  min-height: 80rpx;
}

.question-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.question-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.answer {
  padding: 0 30rpx 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.answer-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

/* 步骤列表样式 */
.steps-list {
  margin-top: 20rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #333;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.step-text {
  flex: 1;
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
  padding-top: 8rpx;
}

/* 提示列表样式 */
.tips-list {
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.tip-bullet {
  width: 20rpx;
  height: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #007aff;
  margin-right: 15rpx;
  margin-top: 5rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
}

/* 联系我们样式重构 */
.contact-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f1f5f9;
}

.contact-header {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.contact-header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.contact-icon-large {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.contact-header-text {
  flex: 1;
}

.contact-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
}

.contact-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.contact-decoration {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.contact-decoration::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.contact-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.contact-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f1f5f9;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.contact-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.contact-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.contact-card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(168, 237, 234, 0.3);
}

.contact-card-content {
  flex: 1;
}

.contact-card-label {
  display: block;
  font-size: 30rpx;
  color: #1f2937;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.contact-card-value {
  font-size: 24rpx;
  color: #6b7280;
}

.contact-card-arrow {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #374151;
  transition: all 0.2s ease;
}

.contact-card:active .contact-card-arrow {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

/* 应用信息样式重构 */
.app-info-section {
  margin-bottom: 40rpx;
}

.app-info-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f1f5f9;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.app-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.app-logo {
  position: relative;
  margin-right: 30rpx;
}

.logo-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  position: relative;
  z-index: 2;
}

.logo-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.logo-shine {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  border-radius: 50%;
  background: conic-gradient(transparent, rgba(102, 126, 234, 0.2), transparent);
  animation: rotate 4s linear infinite;
  z-index: 1;
}

.app-details {
  flex: 1;
}

.app-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.app-description {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 20rpx;
}

.app-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-right: 12rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #4b5563;
}

/* 快速操作样式 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.action-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f1f5f9;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-text {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
  text-align: center;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
} 