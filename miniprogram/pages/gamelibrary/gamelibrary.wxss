/* gameLibrary.wxss */
.game-library-container {
  min-height: 100vh;
  width: 100%;
  background: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  padding: 24rpx 24rpx;
  margin: 0 18rpx 20rpx 18rpx;
  text-align: center;
  background: rgba(255,255,255,0.25);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  backdrop-filter: blur(10rpx);
}

.title {
  font-size: 40rpx;
  font-weight: 800;
  color: #ffffff;
}

.game-list {
  /* 已废弃 */
}

/* 新布局 */
.page-scroll {
  height: calc(100vh - 120rpx);
  background: transparent;
}

.game-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 24rpx;
  padding: 0 20rpx 40rpx;
  box-sizing: border-box;
}

.game-card {
  position: relative;
  height: 220rpx;
  border-radius: 24rpx;
  overflow: hidden;
  cursor: pointer;
}

.card-bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transition: transform 0.3s ease;
}

.game-card-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #fff;
  text-align: center;
  backdrop-filter: blur(6rpx);
}

.game-card:active .card-bg {
  transform: scale(1.05);
}

.game-icon {
  font-size: 64rpx;
  margin-bottom: 12rpx;
}

.game-name {
  font-size: 32rpx;
  font-weight: 700;
}

.game-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.empty {
  margin-top: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #95a5a6;
} 