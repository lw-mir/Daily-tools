/* profile.wxss */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f4f8 100%);
  padding-bottom: 50rpx;
  position: relative;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 30rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.user-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-15px) rotate(180deg); }
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 25rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.user-avatar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.1) 100%);
  border-radius: 50%;
  z-index: -1;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  color: rgba(255, 255, 255, 0.9);
  font-size: 60rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 35rpx;
  position: relative;
  z-index: 2;
}

.user-name {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

.user-desc {
  font-size: 28rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  font-weight: 400;
}

.login-section {
  width: 100%;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.login-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15px);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 60rpx;
  padding: 25rpx 50rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 60rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.login-btn:active::before {
  opacity: 1;
}

/* 使用统计 */
.stats-section {
  background: #fff;
  margin: 30rpx;
  border-radius: 25rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.05);
  position: relative;
  overflow: hidden;
}

.stats-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
  border-radius: 25rpx 25rpx 0 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  position: relative;
  padding-left: 15rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 35rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 35rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 35rpx 25rpx;
  background: linear-gradient(145deg, #f8f9ff 0%, #f0f4f8 100%);
  border-radius: 20rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 20rpx;
}

.stat-item:active {
  transform: translateY(-5rpx) scale(1.02);
  box-shadow: 0 12rpx 35rpx rgba(102, 126, 234, 0.15);
}

.stat-item:active::before {
  opacity: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 800;
  color: #667eea;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(102, 126, 234, 0.2);
  position: relative;
  z-index: 2;
}

.stat-label {
  font-size: 26rpx;
  color: #555;
  font-weight: 500;
  position: relative;
  z-index: 2;
}

/* 收藏工具 */
.favorites-section,
.recent-section,
.settings-section {
  background: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 25rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.05);
  position: relative;
  overflow: hidden;
}

.favorites-section::before,
.recent-section::before,
.settings-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
  border-radius: 25rpx 25rpx 0 0;
}

.manage-btn,
.clear-btn {
  padding: 12rpx 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.manage-btn:active,
.clear-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}

.empty-favorites,
.empty-recent {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 25rpx;
  opacity: 0.3;
  filter: grayscale(1);
}

.empty-text {
  font-size: 32rpx;
  color: #555;
  margin: 25rpx 0 15rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 26rpx;
  color: #888;
  text-align: center;
  line-height: 1.5;
  font-weight: 400;
}

.favorites-list,
.recent-list {
  max-height: 450rpx;
  overflow-y: auto;
}

.favorite-item,
.recent-item {
  display: flex;
  align-items: center;
  padding: 30rpx 25rpx;
  border-bottom: 1rpx solid #f5f6fa;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  background: #fff;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.favorite-item:last-child,
.recent-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.favorite-item::before,
.recent-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 15rpx;
}

.favorite-item:active,
.recent-item:active {
  transform: translateX(8rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.favorite-item:active::before,
.recent-item:active::before {
  opacity: 1;
}

.tool-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.15);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  position: relative;
  z-index: 2;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 2;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tool-desc {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 400;
}

.tool-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
  font-weight: 400;
}

.tool-action {
  margin-left: 20rpx;
  position: relative;
  z-index: 2;
}

.remove-btn {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.remove-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 107, 0.4);
}

/* 设置选项 */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 25rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.setting-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 15rpx;
}

.setting-item:active {
  transform: translateX(8rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.setting-item:active::before {
  opacity: 1;
}

.setting-left {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 18rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.15);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.setting-text {
  display: flex;
  flex-direction: column;
}

.setting-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 5rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #666;
  font-weight: 400;
}

.setting-right {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.setting-value {
  font-size: 26rpx;
  color: #667eea;
  margin-right: 15rpx;
  font-weight: 500;
}

.setting-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 主题选择弹窗 */
.theme-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.theme-content {
  width: 90%;
  max-width: 500rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

.theme-content::before {
  content: '';
  position: absolute;
  top: 15rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
}

.theme-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.theme-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 10rpx;
}

.theme-desc {
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
}

.theme-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.theme-option {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border-radius: 20rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.theme-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 20rpx;
}

.theme-option.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.theme-option.active::before {
  opacity: 1;
}

.theme-option:active {
  transform: scale(0.98);
}

.theme-preview {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.theme-light { background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%); }
.theme-dark { background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%); }
.theme-auto { background: linear-gradient(135deg, #f8f9ff 0%, #2c3e50 100%); }

.theme-info {
  flex: 1;
  position: relative;
  z-index: 2;
}

.theme-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 5rpx;
}

.theme-detail {
  font-size: 24rpx;
  color: #666;
  font-weight: 400;
}

.theme-actions {
  display: flex;
  gap: 20rpx;
}

.theme-cancel,
.theme-confirm {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 25rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.theme-cancel {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.theme-cancel:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.theme-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.theme-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 15rpx rgba(102, 126, 234, 0.4);
}

/* 响应式设计 */
@media (max-width: 350px) {
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .user-section {
    padding: 60rpx 20rpx 40rpx;
  }
  
  .stats-section,
  .favorites-section,
  .recent-section,
  .settings-section {
    margin: 0 20rpx 20rpx;
    padding: 30rpx 25rpx;
  }
}

/* 加载动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-section {
  animation: slideInUp 0.6s ease-out;
}

.stats-section {
  animation: slideInUp 0.6s ease-out 0.1s both;
}

.favorites-section {
  animation: slideInUp 0.6s ease-out 0.2s both;
}

.recent-section {
  animation: slideInUp 0.6s ease-out 0.3s both;
}

.settings-section {
  animation: slideInUp 0.6s ease-out 0.4s both;
}

/* 数字计数动画 */
@keyframes countUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.stat-number {
  animation: countUp 0.8s ease-out 0.5s both;
}

/* 增强的滚动条样式 */
.favorites-list::-webkit-scrollbar,
.recent-list::-webkit-scrollbar {
  width: 6rpx;
}

.favorites-list::-webkit-scrollbar-track,
.recent-list::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 3rpx;
}

.favorites-list::-webkit-scrollbar-thumb,
.recent-list::-webkit-scrollbar-thumb {
  background: rgba(102, 126, 234, 0.6);
  border-radius: 3rpx;
}

.favorites-list::-webkit-scrollbar-thumb:hover,
.recent-list::-webkit-scrollbar-thumb:hover {
  background: rgba(102, 126, 234, 0.8);
} 