/* tictactoe.wxss */
.tictactoe-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
}

.status-bar {
  margin-bottom: 40rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.board {
  width: 660rpx;
  height: 660rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  gap: 6rpx;
}

.cell {
  background: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  font-weight: 700;
  color: #667eea;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  transition: background 0.2s;
}

.cell:active {
  background: #f0f4ff;
}

.actions {
  margin-top: 40rpx;
} 