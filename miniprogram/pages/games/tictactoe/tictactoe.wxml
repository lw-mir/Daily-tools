<view class="tictactoe-container">
  <view class="status-bar">
    <text class="status-text">{{statusText}}</text>
  </view>

  <view class="board">
    <view 
      wx:for="{{board}}" 
      wx:key="index" 
      wx:for-index="index" 
      class="cell" 
      bindtap="onCellTap" 
      data-index="{{index}}"
    >
      <text class="cell-text">{{item}}</text>
    </view>
  </view>

  <view class="actions">
    <button type="primary" bindtap="onReset">重新开始</button>
  </view>
</view> 