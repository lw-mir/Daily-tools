<!--category.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input 
      class="search-input" 
      placeholder="搜索工具分类..." 
      value="{{searchText}}"
      bindinput="onSearchInput"
      confirm-type="search"
      bindconfirm="onSearchConfirm"
    />
    <view class="search-icon">🔍</view>
  </view>

  <!-- 分类统计 -->
  <view class="stats-section">
    <view class="stats-item">
      <text class="stats-number">{{totalCategories}}</text>
      <text class="stats-label">分类总数</text>
    </view>
    <view class="stats-item">
      <text class="stats-number">{{totalTools}}</text>
      <text class="stats-label">工具总数</text>
    </view>
  </view>

  <!-- 分类列表 -->
  <view class="category-list">
    <view 
      wx:for="{{filteredCategories}}" 
      wx:key="id"
      class="category-item"
      bindtap="onCategoryTap"
      data-category="{{item}}"
    >
      <view class="category-header">
        <view class="category-icon">{{item.icon}}</view>
        <view class="category-info">
          <text class="category-name">{{item.name}}</text>
          <text class="category-desc">{{item.description}}</text>
        </view>
        <view class="category-count">{{item.toolCount}}个工具</view>
      </view>
      
      <!-- 工具预览 -->
      <view class="tools-preview">
        <view 
          wx:for="{{item.tools}}" 
          wx:for-item="tool"
          wx:key="id"
          class="tool-preview-item"
          bindtap="onToolTap"
          data-tool="{{tool}}"
        >
          <view class="tool-icon">{{tool.icon}}</view>
          <text class="tool-name">{{tool.name}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view wx:if="{{filteredCategories.length === 0}}" class="empty-state">
    <view class="empty-icon">📂</view>
    <text class="empty-text">暂无相关分类</text>
    <text class="empty-desc">尝试调整搜索条件</text>
  </view>
</view> 