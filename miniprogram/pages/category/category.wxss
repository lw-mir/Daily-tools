/* category.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  position: relative;
  margin-bottom: 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 50rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

/* 统计信息样式 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 分类列表样式 */
.category-list {
  margin-bottom: 30rpx;
}

.category-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.category-item:active {
  transform: scale(0.98);
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.category-info {
  flex: 1;
}

.category-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #666;
}

.category-count {
  font-size: 24rpx;
  color: #007aff;
  background-color: #f0f8ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 工具预览样式 */
.tools-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tool-preview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  min-width: 120rpx;
  transition: background-color 0.2s;
}

.tool-preview-item:active {
  background-color: #e9ecef;
}

.tool-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.tool-name {
  font-size: 22rpx;
  color: #333;
  text-align: center;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
} 