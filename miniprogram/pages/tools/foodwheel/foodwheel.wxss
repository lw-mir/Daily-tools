/* 吃什么？转盘工具样式 */
.foodwheel-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff7b7b 0%, #ff6b6b 50%, #ee5a52 100%);
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 页面头部样式 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.header-title .title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.header-actions {
  display: flex;
  align-items: center;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.favorite-btn.favorited {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.favorite-icon {
  font-size: 32rpx;
}

/* 页面内容 */
.page-content {
  text-align: center;
  padding: 20rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
}

/* 页面标题 */
.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

/* 转盘容器 */
.wheel-container {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.wheel-wrapper {
  position: relative;
  width: 600rpx;
  height: 600rpx;
}

.wheel-pointer {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 40rpx;
  color: #ff4757;
  z-index: 10;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.wheel {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  transition: transform 3s cubic-bezier(0.23, 1, 0.32, 1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.wheel-segment {
  position: absolute;
  width: 50%;
  height: 50%;
  top: 50%;
  left: 50%;
  transform-origin: 0 0;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  clip-path: polygon(0 0, 100% 0, 86.6% 50%);
}

.segment-content {
  position: absolute;
  top: 25%;
  left: 60%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  white-space: nowrap;
  pointer-events: none;
  transform-origin: center center;
  width: 120rpx;
}

.food-emoji {
  display: block;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.food-name {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
}

/* 控制按钮 */
.control-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.spin-button {
  width: 200rpx;
  height: 80rpx;
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: #ffffff;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
}

.spin-button:active {
  transform: scale(0.95);
}

.spin-button.disabled {
  background: #cccccc;
  box-shadow: none;
  transform: none;
}

/* 结果显示 */
.result-section {
  margin-bottom: 40rpx;
}

.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.result-food {
  margin-bottom: 24rpx;
}

.result-emoji {
  font-size: 80rpx;
  margin-right: 16rpx;
}

.result-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.result-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.action-btn.secondary:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 36rpx;
  color: #999999;
  padding: 8rpx;
  line-height: 1;
}

/* 历史记录列表 */
.history-list {
  flex: 1;
  max-height: 400rpx;
  padding: 0 32rpx 32rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.history-food {
  display: flex;
  align-items: center;
}

.history-emoji {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.history-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.history-time {
  font-size: 24rpx;
  color: #999999;
}

.empty-history {
  text-align: center;
  padding: 80rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 管理弹窗样式 */
.manage-modal {
  max-height: 80vh;
  min-height: 400rpx;
}

.manage-actions {
  padding: 24rpx 32rpx;
  display: flex;
  gap: 16rpx;
  flex-shrink: 0; /* 防止按钮被压缩 */
}

.manage-btn {
  flex: 1;
  height: 72rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  min-width: 0; /* 允许按钮收缩 */
}

.manage-btn.primary {
  background: linear-gradient(45deg, #4ecdc4, #44a08d);
  color: #ffffff;
}

.manage-btn.danger {
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
  color: #ffffff;
}

.manage-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 28rpx;
  flex-shrink: 0; /* 图标不收缩 */
}

/* 选项列表 */
.options-list {
  flex: 1;
  min-height: 0; /* 允许滚动区域收缩 */
  padding: 0 32rpx 24rpx;
  overflow-y: auto;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
  min-height: 76rpx;
  width: 100%;
  box-sizing: border-box;
}

.option-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  margin-right: 16rpx; /* 减少右边距，给按钮更多空间 */
  overflow: hidden; /* 确保内容不会溢出 */
}

.option-emoji {
  font-size: 30rpx;
  margin-right: 14rpx;
  flex-shrink: 0;
  width: 40rpx;
  text-align: center;
}

.option-details {
  flex: 1;
  min-width: 0;
  overflow: hidden; /* 确保文本不会溢出 */
}

.option-name {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
  max-width: 100%; /* 确保不超出容器 */
}

.option-type {
  display: block;
  font-size: 20rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
  max-width: 100%; /* 确保不超出容器 */
}

.custom-badge {
  background: #ff6b6b;
  color: #ffffff;
  font-size: 16rpx;
  padding: 3rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.option-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
  width: auto; /* 自动宽度 */
  min-width: 120rpx; /* 设置最小宽度确保按钮可见 */
  max-width: 140rpx; /* 设置最大宽度防止超出 */
}

.option-btn {
  padding: 6rpx 8rpx; /* 减少内边距 */
  border: none;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  min-width: 40rpx; /* 减少最小宽度 */
  max-width: 60rpx; /* 设置最大宽度 */
  text-align: center;
  line-height: 1.2;
  flex: 1; /* 平均分配空间 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.option-btn.edit {
  background: #4ecdc4;
  color: #ffffff;
}

.option-btn.delete {
  background: #ff6b6b;
  color: #ffffff;
}

.option-btn:active {
  transform: scale(0.95);
}

/* 表单弹窗样式 */
.form-modal {
  max-height: 90vh;
}

.form-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: #4ecdc4;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  resize: none;
  transition: border-color 0.3s ease;
}

.form-textarea:focus {
  border-color: #4ecdc4;
}

.form-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.form-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.form-btn.cancel {
  background: #f5f5f5;
  color: #666666;
}

.form-btn.confirm {
  background: linear-gradient(45deg, #4ecdc4, #44a08d);
  color: #ffffff;
}

.form-btn:active {
  transform: scale(0.95);
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .wheel-wrapper {
    width: 500rpx;
    height: 500rpx;
  }
  
  .segment-content {
    transform: rotate(-15deg) scale(0.8);
  }
  
  .modal-overlay {
    padding: 16rpx;
  }
  
  .modal-content {
    max-width: 100%;
  }
  
  /* 管理弹窗小屏幕适配 */
  .manage-actions {
    padding: 20rpx 24rpx;
    gap: 12rpx;
  }
  
  .manage-btn {
    height: 64rpx;
    font-size: 24rpx;
    gap: 6rpx;
  }
  
  .btn-icon {
    font-size: 24rpx;
  }
  
  .options-list {
    padding: 0 24rpx 20rpx;
  }
  
  .option-item {
    padding: 14rpx 0;
    min-height: 68rpx;
  }
  
  .option-emoji {
    font-size: 26rpx;
    margin-right: 10rpx;
    width: 36rpx;
  }
  
  .option-name {
    font-size: 26rpx;
  }
  
  .option-type {
    font-size: 18rpx;
  }
  
  .custom-badge {
    font-size: 14rpx;
    padding: 2rpx 6rpx;
    margin-left: 8rpx;
  }
  
  .option-actions {
    gap: 6rpx;
    min-width: 100rpx; /* 小屏幕下减少最小宽度 */
    max-width: 120rpx; /* 小屏幕下减少最大宽度 */
  }
  
  .option-btn {
    padding: 5rpx 6rpx; /* 进一步减少内边距 */
    font-size: 18rpx;
    min-width: 36rpx; /* 减少最小宽度 */
    max-width: 50rpx; /* 设置最大宽度 */
  }
  
  /* 表单弹窗小屏幕适配 */
  .form-content {
    padding: 24rpx;
  }
  
  .form-group {
    margin-bottom: 24rpx;
  }
  
  .form-label {
    font-size: 26rpx;
    margin-bottom: 8rpx;
  }
  
  .form-input {
    height: 72rpx;
    font-size: 26rpx;
    padding: 0 16rpx;
  }
  
  .form-textarea {
    min-height: 100rpx;
    padding: 16rpx;
    font-size: 26rpx;
  }
  
  .form-actions {
    padding: 24rpx;
    gap: 16rpx;
  }
  
  .form-btn {
    height: 72rpx;
    font-size: 28rpx;
  }
} 

/* 超小屏幕适配 */
@media screen and (max-width: 600rpx) {
  .modal-overlay {
    padding: 12rpx;
  }
  
  .manage-actions {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .manage-btn {
    width: 100%;
    height: 60rpx;
    font-size: 22rpx;
  }
  
  .option-item {
    flex-direction: column;
    align-items: flex-start;
    padding: 12rpx 0;
    gap: 12rpx;
  }
  
  .option-info {
    width: 100%;
    margin-right: 0;
  }
  
  .option-actions {
    width: 100%;
    justify-content: center;
    gap: 8rpx;
    min-width: auto; /* 重置最小宽度 */
    max-width: 200rpx; /* 超小屏幕下设置合理的最大宽度 */
    /* margin-left: 50rpx; */
  }
  
  .option-btn {
    min-width: 60rpx; /* 超小屏幕下增加最小宽度以便阅读 */
    max-width: 80rpx; /* 设置最大宽度 */
    padding: 8rpx 12rpx; /* 增加内边距 */
    font-size: 20rpx; /* 稍微增大字体 */
  }
  
  .custom-badge {
    margin-left: auto;
  }
} 