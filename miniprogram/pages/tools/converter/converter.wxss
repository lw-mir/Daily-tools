/* converter.wxss */
.converter-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 页面头部样式 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.header-title .title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.header-actions {
  display: flex;
  align-items: center;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.favorite-btn.favorited {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.favorite-icon {
  font-size: 32rpx;
}

.converter-container::before {
  content: '';
  position: absolute;
  top: -40%;
  left: -40%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.06) 0%, transparent 70%);
  animation: floatRotate 25s linear infinite;
}

@keyframes floatRotate {
  0% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.1); }
  100% { transform: rotate(360deg) scale(1); }
}

/* 转换类型选择 */
.type-selector {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  padding: 40rpx 0;
  margin: 40rpx 30rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 2;
}

.type-selector::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 30rpx;
  z-index: -1;
}

.type-scroll {
  white-space: nowrap;
}

.type-list {
  display: flex;
  padding: 0 30rpx;
  gap: 25rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 20rpx;
  border-radius: 25rpx;
  min-width: 130rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.type-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 25rpx;
}

.type-item.active {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(1.08);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

.type-item.active::before {
  opacity: 1;
}

.type-item:active {
  transform: scale(0.95);
}

.type-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.type-name {
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 转换主体 */
.conversion-main {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  margin: 35rpx 30rpx;
  border-radius: 35rpx;
  padding: 50rpx 35rpx;
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.conversion-main::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%);
  border-radius: 35rpx;
  z-index: -1;
}

/* 输入输出区域 */
.input-section, .output-section {
  margin-bottom: 35rpx;
}

.input-header, .output-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  position: relative;
  padding-left: 15rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 3rpx;
}

.input-row, .output-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.value-input {
  flex: 1;
  height: 90rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 20rpx;
  padding: 0 25rpx;
  font-size: 32rpx;
  color: #2c3e50;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.value-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.value-output {
  flex: 1;
  height: 90rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 20rpx;
  padding: 0 25rpx;
  font-size: 32rpx;
  color: #2c3e50;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.output-value {
  width: 100%;
  word-break: break-all;
  font-weight: 600;
  color: #667eea;
}

.unit-picker {
  min-width: 160rpx;
  height: 90rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 20rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.unit-picker:active {
  transform: scale(0.98);
  background: #f8f9fa;
}

.picker-display {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}

.unit-text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  text-align: center;
  flex: 1;
}

.picker-arrow {
  font-size: 24rpx;
  color: #8e9aaf;
  transition: all 0.3s ease;
  margin-left: 8rpx;
}

/* 增大picker弹出选择框的字体大小 */
picker-view-column {
  font-size: 36rpx !important;
}

picker-view-column text {
  font-size: 36rpx !important;
  font-weight: 600 !important;
  color: #2c3e50 !important;
  text-align: center !important;
  line-height: 1.5 !important;
}

/* 针对微信小程序picker组件的样式调整 */
.wx-picker-item {
  font-size: 36rpx !important;
  font-weight: 600 !important;
  color: #2c3e50 !important;
  text-align: center !important;
  line-height: 1.5 !important;
}

/* 确保picker选中项的样式 */
.wx-picker-item.wx-picker-item_active {
  font-size: 38rpx !important;
  font-weight: 700 !important;
  color: #667eea !important;
}

/* 交换按钮 */
.swap-section {
  display: flex;
  justify-content: center;
  margin: 25rpx 0;
}

.swap-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.swap-btn:active {
  transform: scale(0.9) rotate(180deg);
}

.swap-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

/* 复制按钮 */
.copy-section {
  display: flex;
  justify-content: center;
  margin-top: 25rpx;
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 15rpx 30rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.copy-btn:active {
  transform: scale(0.95);
}

.copy-icon {
  font-size: 24rpx;
}

.copy-text {
  font-size: 26rpx;
  color: white;
  font-weight: 600;
}

/* 快捷转换 */
.quick-conversion {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  margin: 35rpx 30rpx;
  border-radius: 30rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.quick-header {
  margin-bottom: 30rpx;
}

.quick-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.quick-item {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 25rpx;
  border: 1rpx solid #e1e8ed;
  transition: all 0.3s ease;
}

.quick-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.quick-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 8rpx;
}

.quick-from, .quick-to {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.quick-arrow {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}

.quick-desc {
  font-size: 24rpx;
  color: #8e9aaf;
}

/* 历史记录 */
.history-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  margin: 35rpx 30rpx 50rpx;
  border-radius: 30rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.clear-history {
  padding: 8rpx 20rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 15rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.clear-history:active {
  transform: scale(0.95);
  background: #ff5252;
}

.empty-history {
  text-align: center;
  padding: 60rpx 0;
  color: #8e9aaf;
  font-size: 28rpx;
}

.history-list {
  max-height: 600rpx;
}

.history-item {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #e1e8ed;
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.history-conversion {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 8rpx;
}

.history-input, .history-output {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.history-arrow {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}

.history-time {
  font-size: 24rpx;
  color: #8e9aaf;
} 