/* converter.wxss */
.converter-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 50rpx;
  position: relative;
  overflow: hidden;
}

.converter-container::before {
  content: '';
  position: absolute;
  top: -40%;
  left: -40%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.06) 0%, transparent 70%);
  animation: floatRotate 25s linear infinite;
}

@keyframes floatRotate {
  0% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.1); }
  100% { transform: rotate(360deg) scale(1); }
}

/* 转换类型选择 */
.type-selector {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  padding: 40rpx 0;
  margin: 40rpx 30rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 2;
}

.type-selector::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 30rpx;
  z-index: -1;
}

.type-scroll {
  white-space: nowrap;
}

.type-list {
  display: flex;
  padding: 0 30rpx;
  gap: 25rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 20rpx;
  border-radius: 25rpx;
  min-width: 130rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.type-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 25rpx;
}

.type-item.active {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(1.08);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

.type-item.active::before {
  opacity: 1;
}

.type-item:active {
  transform: scale(0.95);
}

.type-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.type-name {
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 转换主体 */
.conversion-main {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  margin: 35rpx 30rpx;
  border-radius: 35rpx;
  padding: 50rpx 35rpx;
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.conversion-main::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(145deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%);
  border-radius: 35rpx;
  z-index: -1;
}

/* 输入区域 */
.input-section, .output-section {
  margin-bottom: 35rpx;
}

.input-header, .output-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  position: relative;
  padding-left: 15rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.input-row, .output-row {
  display: flex;
  align-items: center;
  gap: 25rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 25rpx;
  border: 3rpx solid transparent;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.input-row::before, .output-row::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 20rpx;
}

.input-row:focus-within {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.15);
  transform: translateY(-2rpx);
}

.input-row:focus-within::before {
  opacity: 1;
}

.value-input {
  flex: 1;
  font-size: 36rpx;
  color: #2c3e50;
  background: transparent;
  border: none;
  outline: none;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.value-output {
  flex: 1;
  display: flex;
  align-items: center;
  min-height: 70rpx;
}

.output-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  word-break: break-all;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.unit-picker {
  min-width: 140rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 18rpx;
  min-width: 140rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.picker-display::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 18rpx;
}

.picker-display:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.picker-display:active::before {
  opacity: 1;
}

.unit-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.picker-icon {
  margin-left: 12rpx;
  color: #fff;
  font-size: 24rpx;
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.3));
}

/* 交换按钮 */
.swap-section {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
  position: relative;
}

.swap-btn {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(78, 205, 196, 0.4);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

.swap-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 50%;
}

.swap-btn:active {
  transform: scale(0.85) rotate(180deg);
  box-shadow: 0 4rpx 20rpx rgba(78, 205, 196, 0.6);
}

.swap-btn:active::before {
  opacity: 1;
}

.swap-icon {
  color: #fff;
  transform: rotate(90deg);
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}

/* 复制区域 */
.copy-section {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 18rpx 35rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 30rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 6rpx 25rpx rgba(40, 167, 69, 0.3);
  position: relative;
  overflow: hidden;
}

.copy-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: all 0.3s ease;
  border-radius: 30rpx;
}

.copy-btn:active {
  transform: scale(0.92);
  box-shadow: 0 3rpx 15rpx rgba(40, 167, 69, 0.5);
}

.copy-btn:active::before {
  opacity: 1;
}

.copy-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 历史记录区域 */
.history-section {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  margin: 0 30rpx 30rpx;
  border-radius: 35rpx;
  padding: 35rpx;
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f6fa;
}

.history-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  position: relative;
  padding-left: 15rpx;
}

.history-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.clear-history-btn {
  padding: 15rpx 25rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.clear-history-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 107, 0.4);
}

.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.history-item:last-child {
  margin-bottom: 0;
}

.history-item:active {
  background: #e9ecef;
  transform: scale(0.98);
  border-color: rgba(102, 126, 234, 0.2);
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-conversion {
  font-size: 26rpx;
  color: #495057;
  font-weight: 500;
}

.history-time {
  font-size: 22rpx;
  color: #6c757d;
}

.empty-history {
  text-align: center;
  padding: 60rpx 0;
  color: #6c757d;
}

.empty-history-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-history-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 响应式设计 */
@media (max-width: 350px) {
  .type-list {
    gap: 15rpx;
  }
  
  .type-item {
    min-width: 100rpx;
    padding: 20rpx 15rpx;
  }
  
  .conversion-main {
    padding: 30rpx 25rpx;
  }
  
  .input-row, .output-row {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .unit-picker {
    width: 100%;
  }
}

/* 加载动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.type-selector {
  animation: slideInUp 0.6s ease-out;
}

.conversion-main {
  animation: slideInUp 0.6s ease-out 0.1s both;
}

.history-section {
  animation: slideInUp 0.6s ease-out 0.2s both;
}

/* 数值变化动画 */
@keyframes numberChange {
  0% {
    transform: scale(1);
    color: #2c3e50;
  }
  50% {
    transform: scale(1.05);
    color: #667eea;
  }
  100% {
    transform: scale(1);
    color: #2c3e50;
  }
}

.output-value.updating {
  animation: numberChange 0.3s ease-out;
}

/* 增强的滚动条样式 */
.type-scroll::-webkit-scrollbar,
.history-list::-webkit-scrollbar {
  height: 6rpx;
  width: 6rpx;
}

.type-scroll::-webkit-scrollbar-track,
.history-list::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 3rpx;
}

.type-scroll::-webkit-scrollbar-thumb,
.history-list::-webkit-scrollbar-thumb {
  background: rgba(102, 126, 234, 0.6);
  border-radius: 3rpx;
}

.type-scroll::-webkit-scrollbar-thumb:hover,
.history-list::-webkit-scrollbar-thumb:hover {
  background: rgba(102, 126, 234, 0.8);
} 