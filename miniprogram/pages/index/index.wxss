/**index.wxss**/
/* 首页样式 - 完全重构 */

/* 页面根容器 */
.scrollarea {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 主容器 */
.index-container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 公告横幅 */
.announcement-banner {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.announcement-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.horn-icon {
  font-size: 32rpx;
  color: #ffffff;
  animation: shake 2s infinite;
}

.announcement-content {
  flex: 1;
  display: flex;
  justify-content: center;
  overflow: hidden;
  margin: 0 20rpx;
}

.announcement-text {
  display: flex;
  align-items: center;
}

.scrolling-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  animation: scroll-text 15s linear infinite;
}

/* 搜索栏 */
.search-section {
  padding: 30rpx;
  background: transparent;
}

.search-bar {
  background: #ffffff;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.search-bar:focus-within {
  border-color: #1890ff;
  box-shadow: 0 8rpx 30rpx rgba(24, 144, 255, 0.15);
}

.search-icon {
  margin-right: 20rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #999999;
  font-size: 28rpx;
}

.search-clear {
  margin-left: 20rpx;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.search-clear:active {
  opacity: 0.8;
}

/* 分类标签栏 */
.tab-section {
  padding: 0 30rpx 30rpx;
}

.tab-list {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  position: relative;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #1890ff, #40a9ff);
  border-radius: 3rpx;
}

.tab-text {
  font-size: 30rpx;
  color: #666666;
  transition: color 0.3s ease;
}

.tab-item.active .tab-text {
  color: #1890ff;
}

/* 主内容区域 */
.main-content {
  padding: 0 30rpx;
  min-height: calc(100vh - 400rpx);
}

/* 工具标签页 */
.tools-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 底部功能区域 */
.bottom-functions {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.function-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1), rgba(64, 169, 255, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.function-item:hover::before {
  opacity: 1;
}

.function-item:active {
  transform: scale(0.95);
}

.function-icon {
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.emoji-icon {
  font-size: 48rpx;
  line-height: 1;
}

.function-name {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
  text-align: center;
  line-height: 1.3;
  position: relative;
  z-index: 1;
}

/* 工具精选区域 */
.featured-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  margin-bottom: 30rpx;
  text-align: center;
  position: relative;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #1890ff, #40a9ff);
  border-radius: 2rpx;
}

.featured-tools {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.featured-tool-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.featured-tool-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1), rgba(64, 169, 255, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.featured-tool-item:hover::before {
  opacity: 1;
}

.featured-tool-item:active {
  transform: scale(0.98);
}

.tool-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.tool-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.tool-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.tool-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.tool-subtitle {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 推荐工具页面 */
.recommend-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  min-height: 600rpx;
}

.recommend-tools {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommend-tool-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.recommend-tool-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1), rgba(64, 169, 255, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.recommend-tool-item:hover::before {
  opacity: 1;
}

.recommend-tool-item:active {
  transform: scale(0.98);
}

.tool-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  border-radius: 16rpx;
  position: relative;
  z-index: 1;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.tool-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.tool-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.tool-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tool-tag {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.tool-action {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.favorite-btn {
  padding: 10rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.favorite-btn.active {
  background: rgba(24, 144, 255, 0.1);
}

/* 热门工具页面 */
.hot-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  min-height: 600rpx;
}

.hot-tools {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hot-tool-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.hot-tool-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1), rgba(64, 169, 255, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.hot-tool-item:hover::before {
  opacity: 1;
}

.hot-tool-item:active {
  transform: scale(0.98);
}

.hot-badge {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: #ffffff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
  margin-right: 20rpx;
}

.hot-text {
  font-size: 20rpx;
}

/* 我的工具页面 */
.mine-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  min-height: 600rpx;
}

.mine-tools {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mine-tool-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.mine-tool-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1), rgba(64, 169, 255, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.mine-tool-item:hover::before {
  opacity: 1;
}

.mine-tool-item:active {
  transform: scale(0.98);
}

.favorite-status {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* 空状态提示 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 50rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #e8e8e8;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #cccccc;
  line-height: 1.5;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

/* 动画效果 */
@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  10%, 30%, 50%, 70%, 90% { transform: rotate(-10deg); }
  20%, 40%, 60%, 80% { transform: rotate(10deg); }
}

@keyframes scroll-text {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .function-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .featured-tools {
    grid-template-columns: 1fr;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .scrollarea {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }
  
  .search-bar,
  .tab-list,
  .bottom-functions,
  .featured-section,
  .recommend-content,
  .hot-content,
  .mine-content {
    background: #2d2d2d;
    border-color: #404040;
  }
  
  .tab-text,
  .section-title,
  .function-name,
  .tool-title,
  .tool-name {
    color: #ffffff;
  }
  
  .tool-subtitle,
  .tool-desc {
    color: #cccccc;
  }
  
  .function-item,
  .featured-tool-item,
  .recommend-tool-item,
  .hot-tool-item,
  .mine-tool-item {
    background: #404040;
  }
  
  .search-input {
    color: #ffffff;
  }
  
  .search-input::placeholder {
    color: #999999;
  }
}
