/* pages/auth/auth.wxss */

.auth-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.auth-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 授权内容样式 */
.auth-content {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.auth-desc {
  text-align: center;
  margin-bottom: 40rpx;
}

.desc-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.desc-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 权限列表样式 */
.permission-list {
  margin-top: 40rpx;
}

.permission-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.permission-item:last-child {
  margin-bottom: 0;
}

.permission-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  opacity: 0.8;
}

.permission-text {
  flex: 1;
}

.permission-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.permission-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 错误信息样式 */
.error-container {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  max-width: 600rpx;
}

.error-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.error-text {
  font-size: 28rpx;
  color: #e74c3c;
  flex: 1;
}

/* 操作按钮样式 */
.auth-actions {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.auth-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.auth-btn::after {
  border: none;
}

.auth-btn.primary {
  background: #07c160;
  color: #ffffff;
  box-shadow: 0 6rpx 24rpx rgba(7, 193, 96, 0.3);
}

.auth-btn.primary:active {
  background: #06ad56;
  transform: translateY(2rpx);
}

.auth-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.auth-btn.secondary:active {
  background: rgba(255, 255, 255, 0.8);
  transform: translateY(2rpx);
}

.auth-btn.tertiary {
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.auth-btn.tertiary:active {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(2rpx);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 调试信息样式 */
.debug-container {
  width: 100%;
  max-width: 600rpx;
  margin-top: 40rpx;
}

.debug-toggle {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.debug-toggle-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.debug-content {
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.debug-text {
  font-size: 22rpx;
  color: #ffffff;
  line-height: 1.6;
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 用户协议样式 */
.agreement-container {
  margin-top: 40rpx;
  text-align: center;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

.agreement-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
}

/* 响应式设计 */
@media (max-width: 350px) {
  .auth-container {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .app-logo {
    width: 100rpx;
    height: 100rpx;
  }
  
  .app-title {
    font-size: 42rpx;
  }
  
  .auth-content {
    padding: 30rpx;
  }
  
  .desc-title {
    font-size: 32rpx;
  }
  
  .auth-btn {
    height: 88rpx;
    font-size: 30rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .auth-content {
    background: rgba(30, 30, 30, 0.95);
  }
  
  .desc-title {
    color: #ffffff;
  }
  
  .desc-text {
    color: #cccccc;
  }
  
  .permission-title {
    color: #ffffff;
  }
  
  .permission-desc {
    color: #aaaaaa;
  }
  
  .error-container {
    background: rgba(30, 30, 30, 0.9);
  }
  
  .auth-btn.secondary {
    background: rgba(50, 50, 50, 0.9);
    color: #667eea;
  }
} 